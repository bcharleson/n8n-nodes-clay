{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist",
    "strict": false,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "nodes/ClayApi/**/*.ts",
    "nodes/generic.functions.ts",
    "credentials/**/*.ts",
    "index.ts"
  ],
  "exclude": ["node_modules", "dist", "test", "__tests__"]
}
